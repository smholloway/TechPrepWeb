<p id="notice"><%= notice %></div>

<div id="front">
	<div class="flashcard">
  	<%= @question.front %>
	</div>
	<div class="rArr">(answer) &rArr;</div><br class="spacer"/>
</div>

<div id="back">
	<div class="flashcard">
  	<%= @question.back %>
	</div>
	<div class="lArr">&lArr; (question)</div><br class="spacer"/>
</div>

<div id="tags">
  <b>Tags:</b>
  <%= @question.tag_list %>
</div>

<br/>

<div id="buttons">
	<div class="button half_button">
		<%= link_to 'Previous question', questions_path %>
	</div>
	<div class="button half_button">
		<%= link_to 'Next question', questions_path %>
	</div>

	<br class="spacer"/>

	<div class="button full_button">
		<%= link_to 'Questions', questions_path %>
	</div>
</div>
<div id="questions" class="current">
<div class="toolbar">
<h1>Interview Questions</h1>
<a class="button slideup" id="infoButton" href="#about">About</a>
</div>
<ul class="rounded">
<% for question in @questions %>
<li><%= link_to truncate(strip_tags(question.front), :length => 40, :omission => "..."), question %></li>
<% end %>
</ul>

<ul class="individual">
<li><%= link_to 'Previous question', questions_path %></li>
<li><%= link_to 'Next question', questions_path %></li>
</ul>
<div class="info">
<p>Add this page to your home screen to view the custom icon, startup screen, and full screen mode.</p>
</div>
</div>
