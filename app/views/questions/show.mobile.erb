<div id="question" class="current">
  <div id="front">
  	<div class="flashcard">
    	<%= @question.front %>
  	</div>
  	<div class="rArr">(answer) &rArr;</div><br class="spacer"/>
  </div>

  <div id="back">
  	<div class="flashcard">
    	<%= @question.back %>
  	</div>
  	<div class="lArr">&lArr; (question)</div><br class="spacer"/>
  </div>

  <ul>
    <li class="half_button left"><%= link_to 'Previous question', questions_path %></li>
    <li class="half_button right"><%= link_to 'Next question', questions_path %></li>
    <br class="spacer"/>
  </ul>
</div>
