<div id="question" class="current">
  <div id="front">
  	<div class="flashcard">
    	<%= @question.front %>
  	</div>
  	<div class="rArr">(answer) &rArr;</div><br class="spacer"/>
  </div>

  <div id="back">
  	<div class="flashcard">
    	<%= @question.back %>
  	</div>
  	<div class="lArr">&lArr; (question)</div><br class="spacer"/>
  </div>

  <ul class="individual">
    <li class="half_button left">
      <% if @prev.blank? %>
        <%= link_to 'Questions', questions_path %>
      <% else %>
        <%= link_to 'Previous question', question_path(@prev) %>
      <% end %>
    </li>
    <li class="half_button right">
      <% if @next.blank? %>
        <%= link_to 'Questions', questions_path %>
      <% else %>
        <%= link_to 'Next question', question_path(@next) %>
      <% end %>
    </li>
    <br class="spacer"/>
  </ul>
</div>
